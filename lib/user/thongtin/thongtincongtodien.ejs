<%- include ../../../layouts/header.ejs %>
<div class="col-md-9">
<div class='panel panel-primary'>
	<div class='panel-heading'>
		Thông tin công tơ điện
	</div>
	<div class='panel-body'>
	<% if(ctd.length > 0)
	{%>
	<table class="table table-bordered table-hover user-table">
			<thead>
				<tr class='success'>
					<td>Mã công tơ</td>
					<td>Chỉ số cột</td>
					<td>Chỉ số hiện tại</td>
					<td>Ngày cập nhật</td>
					<td>Mục đích sử dụng</td>
					<td>Trạm biến áp</td>
					<td>Tính theo bậc thang</td>
					<td>Trạng thái</td>
				</tr>
			</thead>
			<tbody>
					<%
					for(var i = 0; i < ctd.length; i++)
					{ %>
						<tr>
							<td><%=ctd[i].macongto%></td>
							<td><%=ctd[i].chisocot%></td>
							<td><%=ctd[i].chisomoinhat%></td>
							<td><%=getDate(ctd[i].ngayghinhancuoicung)%></td>
							<td><%=ctd[i].tennhom + ' - ' + ctd[i].mucdich%></td>
							<td><%=ctd[i].tentram%></td>
							<td><%if(ctd[i].tinhtheobacthang == 1){%><span class='glyphicon glyphicon-ok'></span><%}else{%>-<%}%></td>
							<td><%if(ctd[i].trangthai == 1){%>Đang sử dụng<%}else{%>-<%}%></td>
						</tr>
						<%
					}
					%>
				</tbody>
				<tfoot>
				</tfoot>
			</table>
			<%} else 
				{%>
				<tr>
					<td class='left-col-table' colspan="8">Danh sách trống</td>
				</tr>
				<%}%>
				<%- include ../tintuc/tintuc-bosung.ejs %>
	</div>
</div>
</div>
<%- include ../../../layouts/footer.ejs %>
