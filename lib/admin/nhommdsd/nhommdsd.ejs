<%- include ../layouts/header.ejs %>
<div class="col-md-9">
<div class='panel panel-primary'>
	<div class='panel-heading'>
		Nhóm mục đích sử dụng > Danh sách nhóm mục đích sử dụng
	</div>
	<div class='panel-body'>
		<a href='/admin/nhommdsd-them' class='btn btn-success'><span class='glyphicon glyphicon-plus'></span> Thêm nhóm</a>
		<br>
		<br>
		<table class="table table-bordered table-hover user-table">
			<thead>
				<tr class='success'>
					<td>Số thứ tự</td>
					<td class='left-col-table'>Tên nhóm</td>
					<td colspan="3">Thao tác</td>
				</tr>
			</thead>
			<tbody>
				<% if(nhommdsd.length) 
				{ 
					for(var i = 0; i < nhommdsd.length; i++) { 
					%>
					<tr>
						<td><%=i+1%></td>
						<td class='left-col-table'><%=nhommdsd[i].tennhom%></td>
						<td>
							<%if(nhommdsd[i].trangthai == 1)
								{
								%>
								<a href='javascript: void(0)' class='btnAnNhomMDSD' data-manhommdsd='<%=nhommdsd[i].manhommdsd%>'>Ẩn</a>
								<%
								}
								else
								{
								%>
								<a href='javascript: void(0)' class='btnHienNhomMDSD' data-manhommdsd='<%=nhommdsd[i].manhommdsd%>'>Hiển thị</a>
								<%
								}
							%>
						</td>
						<td>
							<a href='javascript: void(0)' class='btnSuaNhomMDSD' data-manhommdsd='<%=nhommdsd[i].manhommdsd%>'><span class='glyphicon glyphicon-pencil'></span></a>
						</td>
						<td>
							<a href='javascript: void(0)' class='btnXoaNhomMDSD' data-manhommdsd='<%=nhommdsd[i].manhommdsd%>' data-tennhom='<%=nhommdsd[i].tennhom%>'><span class='glyphicon glyphicon-remove'></span></a>
						</td>
					</tr>
					<%
					}
					 }
					  else {%>
					<tr>
						<td colspan="3">Chưa có nhóm mục đích sử dụng</td>
					</tr>
					<%} 
					%>
				</tbody>
			</table>
	</div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="modal-xoanhom" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Xác nhận xóa</h4>
			</div>
			<div class="modal-body">
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal"><span class='glyphicon glyphicon-remove-sign'></span> Hủy</button>
				<button type="button" id='btnXacNhanXoaNhom' class="btn btn-primary"><span class='glyphicon glyphicon-ok'></span> Xóa</button>
			</div>
		</div>
	</div>
</div>
<%- include ../layouts/footer.ejs %>
