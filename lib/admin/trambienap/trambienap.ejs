<%- include ../layouts/header.ejs %>
<div class="col-md-9">
<div class='panel panel-primary'>
	<div class='panel-heading'>
		Trạm biến áp > Danh sách trạm biến áp
	</div>
	<div class='panel-body'>
		<a href='/admin/trambienap-them' class='btn btn-success'><span class='glyphicon glyphicon-plus'></span> Thêm trạm biến áp</a>
		<br>
		<br>
		<table class="table table-bordered table-hover user-table">
			<thead>
				<tr class='success'>
					<td>Số thứ tự</td>
					<td class='left-col-table'>Tên trạm</td>
					<td class='left-col-table'>Ghi chú</td>
					<td colspan="2">Thao tác</td>
				</tr>
			</thead>
			<tbody>
				<% if(data.length) 
				{ 
					for(var i = 0; i < data.length; i++) { 
					%>
					<tr>
						<td><%=i+1%></td>
						<td class='left-col-table'><%=data[i].tentram%></td>
						<td class='left-col-table'><%=data[i].ghichu%></td>
						<td>
							<a href='javascript: void(0)' class='btnSuaNhomMDSD' data-manhommdsd=''><span class='glyphicon glyphicon-pencil'></span></a>
						</td>
						<td>
							<a href='javascript: void(0)' class='btnXoaNhomMDSD' data-manhommdsd='' data-tennhom=''><span class='glyphicon glyphicon-remove'></span></a>
						</td>
					</tr>
					<%
					}
					 }
					  else {%>
					<tr>
						<td colspan="3">Danh sách trống</td>
					</tr>
					<%} 
					%>
				</tbody>
			</table>
	</div>
</div>
</div>
<!-- Modal -->
<div class="modal fade" id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Xác nhận xóa</h4>
			</div>
			<div class="modal-body">
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal"><span class='glyphicon glyphicon-remove-sign'></span> Hủy</button>
				<button type="button" id='btnXacNhanXoaNhom' class="btn btn-primary"><span class='glyphicon glyphicon-ok'></span> Xóa</button>
			</div>
		</div>
	</div>
</div>
<%- include ../layouts/footer.ejs %>
