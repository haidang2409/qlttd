<%- include ../layouts/header.ejs %>
<div class="col-md-9">
<div class='panel panel-primary'>
	<div class='panel-heading'>
		Quản lý khách hàng > Sửa thông tin khách hàng
	</div>
	<div class='panel-body'>
		<form action="form-congtodien-them">
					<input type="hidden" class="form-control  read-only back-read-only" name="txtMaKhachHang" id='txtMaKhachHang' maxlength="10" value='<%=data[0].makhachhang%>'>
				<div class="form-group">
					<label for="txtHoTenKH">Họ tên khách hàng</label>
					<input type="text" class="form-control not-paste" name="txtHoTenKH" id='txtHoTenKH' maxlength="50" onkeypress="return isKT(event);" value='<%=data[0].hotenkh%>'>
					<div style="color: red;" id='loi-hotenkh'></div>
				</div>
				<div calss='form-group'>
					<b>Giới tính</b><br>
					<label class="radio-inline">
						<input type="radio" name="optionsRadios" id="rdoNam" <%if(data[0].gioitinh == 1) {%> checked<%}%>>
						Nam
					</label>
					<label class="radio-inline">
						<input type="radio" name="optionsRadios" id="rdoNu"  <%if(data[0].gioitinh == 0) {%> checked<%}%>>
						Nữ
					</label>
					<br>
				</div>
				<div class="form-group">
					<label for="txtNgaySinh">Ngày sinh</label>
					<input type="text" class="form-control" name="txtNgaySinh" id='txtNgaySinh' maxlength="10" placeholder="ngày/tháng/năm" value='<%=getDate(data[0].ngaysinh)%>'>
					<div style="color: red;" id='loi-ngaysinh'></div>
				</div>
				<div class="form-group">
					<label for="txtDiaChi">Địa chỉ</label>
					<input type="text" class="form-control" name="txtDiaChi" id='txtDiaChi' maxlength="200" value='<%=data[0].diachi%>'>
					<div style="color: red;" id='loi-diachi'></div>
				</div>
				<div class="form-group">
					<label for="txtSoDienThoai">Số điện thoại</label>
					<input type="text" class="form-control not-paste" name="txtSoDienThoai" id='txtSoDienThoai' maxlength="11" onkeypress=" return isSDT(event)" value='<%=data[0].sodienthoai%>'>
					<div style="color: red;" id='loi-sodt'></div>
				</div>
			<button type="button" id='btnLuuKhachHang-Sua' class="btn btn-warning"><span class='glyphicon glyphicon-floppy-save'></span> Lưu</button>
			<button type="button" id='huy' class="btn btn-default"><span class='glyphicon glyphicon-remove-sign'></span> Hủy</button>
		</form>
	</div>
</div>
</div>

<%- include ../layouts/footer.ejs %>
